<% if @user %>

    <h1><%= @user.username %></h1>


    <% if @user != current_user and current_user %>
        <%- form_tag toggle_follow_user_path do -%>
            <div id="submit_button_container">
                <%= submit_tag (current_user.following? @user) ? "Unfollow" : "Follow", :class => "button" %>
            </div>
            <div class="clear"></div>
        <%- end -%>
    <% end %>

    &nbsp;

    <%= render :partial => "posts_list", :locals => {:posts => @posts } %>
    <%= render :partial => "groups_list", :locals => {:groups => @groups } %>

<% else %>

This user does not exist

<% end %>