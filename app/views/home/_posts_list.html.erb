<h1>Posts</h1>

<ul id="posts_list">
	<% posts.each do |post| %>
		<li<% if posts.first == post %> class="first"<% end %>>
			<div class="post_message_container">
				<%= h link_to post.user.username, user_info_path(post.user.username) %>
				<%= h link_to post.message, post_info_path(post.id) %>
                <div class="group">
                    <%= h link_to Group.find_by_id(post.group_id).name, group_info_path(post.group_id) %>
                </div>
				<div class="time_ago">
					<%= distance_of_time_in_words_to_now(post.created_at) %> ago
				</div>
			</div>
			<div class="clear"></div>
		 </li>
	<% end %>
</ul>