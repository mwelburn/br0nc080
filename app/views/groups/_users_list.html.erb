<h1>Followers</h1>

<ul id="users_list">
	<% users.each do |user| %>
		<li<% if users.first == user %> class="first"<% end %>>
			<div class="user_message_container">
				<%= h link_to user.username, user_info_path(user.username) %>
                <% if user.posts.length > 0 %>
                    <%= h user.posts.last.message %>
                    <div class="time_ago">
                        <%= distance_of_time_in_words_to_now(user.posts.last.created_at) %> ago
                    </div>
                <% end %>
			</div>
			<div class="clear"></div>
		 </li>
	<% end %>
</ul>