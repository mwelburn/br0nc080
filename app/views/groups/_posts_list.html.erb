<h1>Topics</h1>

<ul id="topics_list">
	<% topics.each do |topic| %>
		<li<% if topics.first == topic %> class="first"<% end %>>
			<div class="topic_message_container">
				<%= h link_to topic.user.username, user_info_path(topic.user.username) %>
				<%= h topic.message %>
				<div class="time_ago">
					<%= distance_of_time_in_words_to_now(topic.created_at) %> ago
				</div>
			</div>
			<div class="clear"></div>
		 </li>
	<% end %>
</ul>